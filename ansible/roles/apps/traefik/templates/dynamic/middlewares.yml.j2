# ansible/roles/common/traefik/templates/dynamic/middlewares.yml.j2
http:
  middlewares:
    security-headers:
      headers:
        sslRedirect: true
        stsSeconds: 31536000
        stsIncludeSubdomains: true
        stsPreload: true
        forceSTSHeader: true
        frameDeny: true
        contentTypeNosniff: true
        browserXssFilter: true
        referrerPolicy: "strict-origin-when-cross-origin"

    secured:
      chain:
        middlewares:
          - security-headers

    compress:
      compress: {}
