# Cloud Provider Configuration
HCLOUD_TOKEN=your_hetzner_cloud_api_token

# Server Types (see https://www.hetzner.com/cloud for options)
APP_SERVER_TYPE=cax31                         # ARM-based server for applications
GPU_SERVER_TYPE=ccx63                         # GPU server type

# Optional: Remote State Storage (if not provided, will use local storage)
S3_ENABLED=false                  # Set to true to use S3-compatible storage
S3_ACCESS_KEY=your_key           # Required if S3_ENABLED=true
S3_SECRET_KEY=your_secret        # Required if S3_ENABLED=true
S3_BUCKET=your_bucket            # Required if S3_ENABLED=true
S3_ENDPOINT=your_endpoint        # S3-compatible endpoint (e.g., s3.wasabisys.com for Wasabi)
S3_REGION=us-east-1             # Optional, defaults to us-east-1

# Optional: Development Settings
DEBUG=false                                   # Enable debug logging
